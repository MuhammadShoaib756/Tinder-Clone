    <div class="row">
        <div class="col-md-4 bg-white p-0">
            <%= render  "layouts/profile_bar" %>
            <%= render  "browse/nav_bar" %>
        </div>

        <div class="col-9 col-md-8 mt-5">
            <ul id="slides">
                <%@user.each_with_index do |user, index|%>
                <li class="slide <%= 'showing' if index == 0 %>" data-id="<%= user.id %>">
                    <div class="image-carousel" style="background-image: url('<%= url_for user.images.first %>') "> 
                    </div>
                    <div class="user-detail">
                        <span class= "user-name"><%= user.first_name %><small>, 31</small></span><br />
                        <i class="fa fa-graduation-cap " aria-hidden="true"> Job /Studies</i><br />
                        <i class="fa fa-map-marker" aria-hidden="true"> location</i><br />
                    </div>
                </li>
                <% end %>
            </ul>

            <div id="slide-control">
                <span class="controls" id="decline"><i class =" fa fa-times-circle fa-2x"></i></span>
                <span class="controls" id="approve"><i class =" fa fa-heart fa-2x" style="color:red;"></i></span>
            </div>


        </div> 
    </div>



